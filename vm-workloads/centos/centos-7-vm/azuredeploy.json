{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "virtualMachineName": { "type": "string" },
    "virtualMachineSize": { "type": "string" },
    "adminUsername": { "type": "string" },
    "adminPasswordOrKey": { "type": "securestring" },
    "authenticationType": {
      "type": "string",
      "allowedValues": ["password", "sshPublicKey"]
    },
    "virtualNetwork": { "type": "string" },
    "subnet": { "type": "string" },
    "networkSecurityGroup": { "type": "string" },
    "publicIpAddress": { "type": "string" },
    "osDisk": { "type": "string" }
  },
  "variables": {
    "nicName": "[concat(parameters('virtualMachineName'), '-nic')]"
  },
  "resources": [
    {
      "type": "Microsoft.Network/networkInterfaces",
      "apiVersion": "2022-11-01",
      "name": "[variables('nicName')]",
      "location": "[resourceGroup().location]",
      "properties": {
        "ipConfigurations": [
          {
            "name": "ipconfig1",
            "properties": {
              "subnet": {
                "id": "[parameters('subnet')]"
              },
              "privateIPAllocationMethod": "Dynamic",
              "publicIpAddress": {
                "id": "[parameters('publicIpAddress')]"
              }
            }
          }
        ],
        "networkSecurityGroup": {
          "id": "[parameters('networkSecurityGroup')]"
        }
      }
    },
    {
      "type": "Microsoft.Compute/virtualMachines",
      "apiVersion": "2024-03-01",
      "name": "[parameters('virtualMachineName')]",
      "location": "[resourceGroup().location]",
      "dependsOn": [
        "[resourceId('Microsoft.Network/networkInterfaces', variables('nicName'))]"
      ],
      "properties": {
        "hardwareProfile": {
          "vmSize": "[parameters('virtualMachineSize')]"
        },
        "storageProfile": {
          "osDisk": {
            "managedDisk": {
              "id": "[parameters('osDisk')]"
            },
            "createOption": "Attach"
          },
          "imageReference": {
            "publisher": "ntegralinc1586961136942",
            "offer": "ntg_centos_7",
            "sku": "ntg_centos_7_els",
            "version": "latest"
          }
        },
        "osProfile": {
          "computerName": "[parameters('virtualMachineName')]",
          "adminUsername": "[parameters('adminUsername')]",
          "linuxConfiguration": {
            "disablePasswordAuthentication": "[equals(parameters('authenticationType'), 'sshPublicKey')]",
            "ssh": {
              "publicKeys": [
                {
                  "path": "[concat('/home/', parameters('adminUsername'), '/.ssh/authorized_keys')]",
                  "keyData": "[parameters('adminPasswordOrKey')]"
                }
              ]
            }
          }
        },
        "networkProfile": {
          "networkInterfaces": [
            {
              "id": "[resourceId('Microsoft.Network/networkInterfaces', variables('nicName'))]"
            }
          ]
        },
        "diagnosticsProfile": {
          "bootDiagnostics": {
            "enabled": true
          }
        }
      },
      "plan": {
        "name": "ntg_centos_7_els",
        "publisher": "ntegralinc1586961136942",
        "product": "ntg_centos_7"
      }
    }
  ]
}
